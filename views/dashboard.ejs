<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
  <title>Dashboard</title>

  <!-- General CSS Files -->
  <link rel="stylesheet" href="asset/admin/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/css/iziToast.css">
  <link rel="stylesheet" href="asset/admin/css/style.css">
  <link rel="stylesheet" href="asset/admin/css/components.css">
  <link rel="stylesheet" href="asset/admin/css/custom.css">
</head>

<body>

  <div id="app">
    <div class="main-wrapper">

      <!-- Navbar -->
      <%- include('components/navbar') %>
      <!-- Sidebar -->
      <%- include('components/sidebar', { dashboard: true, users: false, books: false, payments: false }) %>

      <div class="main-content">
        <section class="section">
          <div class="section-header d-flex justify-content-between">
            <h1>Dashboard</h1>
          </div>

          <div class="row">
            <!-- Total Customers -->
            <div class="custom-xxxl-3 custom-xxl-4 col-md-6 col-sm-6 col-12 mb-4">
              <div class="card-stat gr-bg-1">
                <div class="icon">
                  <i class="fas fa-user"></i>
                </div>
                <div class="content">
                  <p class="caption">Total Customers</p>
                  <h4 class="card-stat-amount"><span><%= totalCustomers %></span></h4>
                </div>
              </div>
            </div>

            <!-- Total Books -->
            <div class="custom-xxxl-3 custom-xxl-4 col-md-6 col-sm-6 col-12 mb-4">
              <div class="card-stat gr-bg-3">
                <div class="icon">
                  <i class="fas fa-book"></i>
                </div>
                <div class="content">
                  <p class="caption">Total Books</p>
                  <h4 class="card-stat-amount"><span><%= totalBooks %></span></h4>
                </div>
              </div>
            </div>

            <!-- Total Challans Generated -->
            <div class="custom-xxxl-3 custom-xxl-4 col-md-6 col-sm-6 col-12 mb-4">
              <div class="card-stat gr-bg-4">
                <div class="icon">
                  <i class="fas fa-receipt"></i>
                </div>
                <div class="content">
                  <p class="caption">Total Challans</p>
                  <h4 class="card-stat-amount"><span><%= totalChallans %></span></h4>
                </div>
              </div>
            </div>

            <!-- Total Fees Collected -->
            <div class="custom-xxxl-3 custom-xxl-4 col-md-6 col-sm-6 col-12 mb-4">
              <div class="card-stat gr-bg-5">
                <div class="icon">
                  <i class="fas fa-dollar-sign"></i>
                </div>
                <div class="content">
                  <p class="caption">Fees Collected</p>
                  <h4 class="card-stat-amount"><span><%= totalFeesCollected %></span> PKR</h4>
                </div>
              </div>
            </div>

            <!-- Pending Fees -->
            <div class="custom-xxxl-3 custom-xxl-4 col-md-6 col-sm-6 col-12 mb-4">
              <div class="card-stat gr-bg-6">
                <div class="icon">
                  <i class="fas fa-exclamation-circle"></i>
                </div>
                <div class="content">
                  <p class="caption">Pending Fees</p>
                  <h4 class="card-stat-amount"><span><%= pendingFees %></span> PKR</h4>
                </div>
              </div>
            </div>
          </div>

          <!-- Buttons -->
          <div class="row mt-4">
            <div class="col-md-6 col-sm-12">
              <a href="/users/add" class="btn btn-primary btn-block"><i class="fas fa-user-plus"></i> Add User</a>
            </div>
            <div class="col-md-6 col-sm-12">
              <a href="/payments/create" class="btn btn-success btn-block"><i class="fas fa-file-invoice-dollar"></i> Create Challan</a>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>

  <!-- General JS Scripts -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="asset/admin/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/js/iziToast.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.nicescroll/3.7.6/jquery.nicescroll.min.js"></script>
  <script src="asset/admin/js/scripts.js"></script>
</body>

</html>
